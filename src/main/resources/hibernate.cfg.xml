<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL8Dialect</property>
        <!-- <property name="hibernate.hbm2ddl.auto">create-drop</property> -->
        <!-- in the beginning when your java entities are not stable you can use create drop configuration for tables. and later switch to update -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="connection.username">JAVA_33_34</property>
        <property name="connection.password">JAVA_33_34</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/java_33_34_pet_manager_hibernate?serverTimezone=UTC&amp;createDatabaseIfNotExist=true</property>
    </session-factory>
</hibernate-configuration>